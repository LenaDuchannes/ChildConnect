<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 m-3 p-5 bg-white rounded">
      <h4 class="mt-4">Add New Safety Factor</h4>
        <%= simple_form_for [@case, CaseSafetyFactor.new] do |f| %>
        <%= f.association :case_safety_factor, collection: CaseSafetyFactor::SAFETYFACTORS, input_html: { class: "input", style: "width:70%" }, placeholder: 'Add a safety factor' %>
        <%= f.input :reason, as: :text %>
        <%= f.button :submit, 'Add Safety Factor', class: "btn btn-primary" %>
        <%end%>
      <h4 class="mt-4">Case Safety Factor</h4>
      <div class="gap-30"></div>
      <% @case_safety_factors.each do |case_safety_factor| %>
      <div class="card text-left w-50">
        <div class="card-header">
          <h5><%= case_safety_factor.safety_factor.fact %></h5>
        </div>
        <div class="card-body">
        <p><%= case_safety_factor.reason %></p>
        </div>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</center>
