
<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8">
      <h3>List your safety factors</h3>
      <div class="gap-30"></div>
      <p>Please fill in the form. (*) are mandatory columns.</p>
      <%= simple_form_for @case_safety_factor do |f| %>
        <%= f.input :case_safety_factor, collection: SafetyFactor.all %>
        <%= f.input :reason %>
        <%= f.full_error :token %>
        <%= f.submit 'Save safety factor', class: "btn btn-outline-dark" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
