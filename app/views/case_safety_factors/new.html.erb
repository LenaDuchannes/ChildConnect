<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 m-3 p-5 bg-white rounded">
      <h3>Add A Safety Factor</h3>
      <p class="mb-3">Please fill in the form. (*) are mandatory fields</p>
      <%= simple_form_for [@case, @case_safety_factor] do |f| %>
        <%= f.association :safety_factor, collection: CaseSafetyFactor::SAFETYFACTORS, input_html: { class: "input", style: "width:70%" }, hint: 'Select a safety factor which best describes the situation' %>
        <%= f.input :reason, input_html: { class: "input", style: "width:70%" }, placeholder: 'Write reason for selecting the safety factor' %>
        <%= f.full_error :token %>
        <%= f.submit 'ADD SAFETY FACTOR', class: "btn btn-outline-dark" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
