<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8">
      <h3>List your action</h3>
      <div class="gap-30"></div>
      <p>Please fill in the form. (*) are mandatory columns.</p>
      <%= simple_form_for [@case, @action] do |f| %>
        <%= f.input :title %>
        <%= f.input :due_date %>
        <%= f.input :description %>
        <%= f.full_error :token %>
        <%= f.submit 'Save your action', class: "btn btn-outline-dark" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
