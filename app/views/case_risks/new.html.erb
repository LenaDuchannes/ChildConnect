<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 m-3 p-5 ounded">
      <h3>Add A Risk Factor</h3>
      <p class="mb-4">Please fill in the form. (*) are mandatory fields</p>
      <%= simple_form_for [@case, @case_risk] do |cr| %>
        <%= cr.association :risk, collection: CaseRisk::RISKS, input_html: { class: "input" }, placeholder: 'Select A Risk Factor' %>
        <%= cr.full_error :token %>
        <%= cr.submit 'ADD RISK FACTOR', class: "btn btn-success btn-sm m-2 p-2" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
