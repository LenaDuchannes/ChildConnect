<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 m-3 p-5 bg-white rounded">
      <h3>Add A Risk Factor</h3>
      <p class="mb-3">Please fill in the form. (*) are mandatory fields</p>
      <%= simple_form_for [@case, @case_risk] do |cr| %>
        <%= cr.association :risk, collection: Risk.all %>
        <%= cr.full_error :token %>
        <%= cr.submit 'Add A Risk Factor', class: "btn btn-outline-dark" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
