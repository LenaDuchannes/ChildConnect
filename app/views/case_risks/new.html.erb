<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 m-3 p-5 bg-white rounded">
      <h3>Add A Risk Factor</h3>
      <p class="mb-3">Please select a risk factor which best describes the situation</p>
      <%= simple_form_for [@case, @case_risk] do |cr| %>
        <%= cr.association :risk, collection: CaseRisk::RISKS, input_html: { class: "input", style: "width:70%" }, placeholder: 'Add a risk factor' %>
        <%= cr.full_error :token %>
        <%= cr.submit 'ADD RISK FACTOR', class: "btn btn-outline-dark" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
