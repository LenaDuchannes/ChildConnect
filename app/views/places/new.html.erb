<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-8">
      <h3>Add a new place</h3>
      <div class="gap-30"></div>
      <p>Please fill in the form. (*) are mandatory columns.</p>
      <%= simple_form_for [@case, @place] do |cp| %>
        <%= cp.input :address %>
        <%= cp.full_error :token %>
        <%= cp.submit 'Add place', class: "btn btn-b btn-sm mt-1 font-weight-light p-2" %>
      <% end %>
      </div>
    </div>
  </div>
</center>
