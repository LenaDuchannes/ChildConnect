<center>
  <div class="forms-container">
    <div class="row justify-content-center text-left">
      <div class="card-body shadow col-8 m-5 bg-white rounded">
      <h3>ADD NEW CASE</h3>
      <hr>
      <%= simple_form_for @case do |f| %>
        <%= f.input :photo, label: 'Upload Photo:', input_html: { class: "photo-upload", style: "margin-left: 30px; width: 100%;" } %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :child_name, label: 'Subject Child/Children', placeholder: 'Use "," when adding more than one child', error: 'Subject Children is mandatory, please specify one', input_html: { class: "input",style: "width:100%" }  %>
        <%= f.input :family_name, label: 'Subject Guardian', input_html: { class: "input", style: "width:100%" }, placeholder: 'Last name, First name' %>
        <%= f.input :address, label: 'Case Address', input_html: { id: "case-address",class: "input",style: "width:100%" }, placeholder: 'New York' %>
        <%= f.input :phone_number, label: 'Phone number(s)', placeholder: 'Use "," when adding more than one phone number', input_html: { class: "input", style: "width:100%" } %>
        <%= f.input :summary, label: 'Case Summary', input_html: { class: "input", style: "height:150px; width:100%"}, as: :text, placeholder: 'Write a basic summary about your case' %>
        <%= f.full_error :token %>
        <%= f.submit "ADD CASE", class: 'btn btn-b btn-sm mt-1 font-weight-light p-2' %>
      <% end %>
      </div>
    </div>
  </div>
</center>
