<h1 class="main-card-title mt-3 pb-2 pt-3 pl-5 pr-5">CASES</h1>
<div class="cards pl-5 pr-5 pb-5">
  <% @cases.each do |c| %>
  <%= link_to case_path(c) do %>
  <div class="card-case p-3 mb-2 bg-white">
    <h5 class="card-title"><%= c.family_name %> | <%= c.start_date %></h5>
    <h6 class="card-subtitle text-muted">Case #: <%= c.case_number %></h6>
    <button class="btn btn-sm m-2 p-2 <%= c.priority_color %>"><%= c.priority_action %></button>
    <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
  <% end %>
  <% end %>
</div>
