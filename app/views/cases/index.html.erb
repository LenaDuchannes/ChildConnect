<div class="container">

  <% if @urgent_cases.any? %>
  <h6 class="font-weight-bold mt-5 pl-2">URGENT CASES</h6>
  <div class="cards flex-row">
      <% @urgent_cases.each do |c| %>
        <%= link_to case_path(c) do %>
        <div class="card-case my-4 pl-2 d-flex bg-white">
          <div class="flex-grow-1 px-3 py-3">

            <div class="d-flex align-items-center">
              <img class="avatar" src="https://res.cloudinary.com/louixa/image/upload/v1560217936/photo-1502073018433-36374b61ce42_dyf3vw.jpg">
              <div class="ml-3">
                <h6 class="mb-1 font-weight-bold"><%= c.child_name %></h6>
                <p class="font-weight-light"><%= c.family_name %></p>
              </div>
              <div class="flex-grow-1"></div>
              <p><%= c.priority_action %></p>
              <button class="font-weight-bold btn btn-sm <%= c.priority_color %> ml-3"><%= c.priority_action_date %></button>
            </div>
            <p class="mt-4 font-weight-light pr-3"><%= c.summary %></p>

          </div>

          <div class="map-card build-map h-100" style="min-width: 300px" id="map-<%= c.id %>" data-markers="<%= c.markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <% end %>

  <h6 class="font-weight-bold mt-5 pl-2">YOUR CASES</h6>
  <div class="my-cards flex-row">
      <% @cases.each do |c| %>
        <%= link_to case_path(c) do %>
          <div class="card-case my-3 pl-2 bg-white px-3 py-2" style="height: 80px">
            <div class="d-flex align-items-center w-100">
              <img class="avatar" src="https://res.cloudinary.com/louixa/image/upload/v1560217936/photo-1502073018433-36374b61ce42_dyf3vw.jpg">
              <div class="ml-3">
                <h6 class="mb-1 font-weight-bold"><%= c.child_name %></h6>
                <p class="6font-weight-light"><%= c.family_name %></p>
              </div>
              <div class="flex-grow-1"></div>
              <p><%= c.priority_action %></p>
              <button class="font-weight-bold btn btn-sm <%= c.priority_color %> ml-3"><%= c.priority_action_date %></button>
            </div>

        </div>
        <% end %>
      <% end %>
  </div>
</div>
