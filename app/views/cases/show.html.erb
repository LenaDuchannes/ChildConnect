<div class="container">
  <div class="cards flex-row bd-highlight">
        <%= link_to case_path(@case) do %>
        <div class="card-case my-4 pl-2 d-flex bg-white">
          <div class="flex-grow-1 px-3 py-3">
            <div class="d-flex align-items-center">
              <img class="avatar" src="https://res.cloudinary.com/louixa/image/upload/v1560217936/photo-1502073018433-36374b61ce42_dyf3vw.jpg">
              <div class="ml-3">
                <h6 class="mb-1 font-weight-bold"><%= @case.family_name %></h6>
                <p class="font-weight-light"><%= @case.child_name %></p>
              </div>
              <div class="flex-grow-1"></div>
              <p><%= @case.priority_action %></p>
              <button class="font-weight-bold btn-priority btn-sm <%= @case.priority_color %> ml-3"><%= @case.priority_action_date %></button>
            </div>
            <p class="mt-4 font-weight-light pr-3"><%= @case.summary %></p>

          </div>

          <div class="map-card build-map h-100 d-flex bd-highlight" style="min-width: 300px" id="map-<%= @case.id %>" data-markers="<%= @case.markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      <% end %>
  </div>


<div class="d-flex flex-row">
  <div class="p-2 mr-3 flex-fill bd-highlight" style="width: 100%">
    <h6 class="font-weight-bold mt-3">CASE NOTES</h6>
    <% @case_actions.each do |act| %>
      <p><a class="btn btn-light mt-2 font-weight-light pr-3" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" style="text-align: left; width: 100%;"><%= act.title %> &nbsp | &nbsp <span class="text-danger">DUE: <%= act.due_date %></a></span></p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <p class="p-3"><%= act.report %></p>
          <p class="style='width: 70%;'"><%= link_to "New Note", edit_case_action_path(act), class: 'btn-b btn-sm ml-1 mt-5 font-weight-light p-2' %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="p-2 flex-fill bd-highlight">
    <h6 class="font-weight-bold mt-3 text-left">CASE # <%= @case.case_number %></h6>
    <p class="p-1"><strong>STATUS:</strong> <a class="mt-4 font-weight-light pr-3"><%= @case.state %></p></a>
    <p class="p-1"><strong>OPEN DATE:</strong> <a class="mt-4 font-weight-light pr-3"><%= @case.start_date %></p></a>
    <p class="p-1"><strong>ADDRESS(ES):</strong> <a class="mt-4 font-weight-light pr-3"><%= @case.address %></p></a>
    <p class="p-1 mb-2"><strong>PHONE NUMBER(S):</strong> <a class="mt-4 font-weight-light pr-3"><%= @case.phone_number %></p></a>
    <%= link_to "  Add Next Action  ", new_case_case_action_path(@case), class: 'btn-b btn-sm ml-1 mt-5 font-weight-light p-2' %>
  </div>
</div>
