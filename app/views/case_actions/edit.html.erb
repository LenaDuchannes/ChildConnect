<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow-sm col-12 col-sm-8 m-3 bg-white rounded">
      <h3>Submit Case Note</h3>
      <div class="gap-30 p-1"></div>
      <%= simple_form_for [@case, @case_action] do |f| %>
      <p><h6>CASE STATUS:</h6>
        <%= f.collection_radio_buttons :status, [['No Changes'],['Court'], ['Close Case']], :first, :last %></p>
        <%= f.input :report, label: 'CASE NOTE:', error: 'Case Note entry cannot be left blank.', as: :text %>
        <%= f.full_error :token %>
        <%= f.submit 'ADD NOTE ', class: 'btn btn-secondary rounded-pill btn-sm m-2 ml-5 p-2' %>
      </div>
      <% end %>
    </div>
  </div>
</center>
