<center>
  <div class="forms-container">
    <div class="row justify-content-center">
      <div class="card-body shadow col-12 col-sm-8 mt-5 bg-white rounded">
      <h3>Add Your Next Action</h3>
      <p class="mb-3">(*) are mandatory fields</p>
      <%= simple_form_for [@case, @case_action] do |f| %>
        <%= f.input :title, label: 'Action:', collection: CaseAction::ACTS, input_html: { class: "input", style: "width:70%" }, placeholder: 'Add an action that needs to be completed' %>
        <%= f.input :due_date, label: 'Deadline' %>
        <%= f.input :description, label: 'Description (optional):', input_html: { class: "input", style: "height:150px; width:70%" }, as: :text, placeholder: 'Add a short description of your action if needed' %>
        <%= f.full_error :token %>
        <%= f.submit '    ADD ACTION    ', class: 'btn btn-secondary rounded-pill btn-sm m-2 ml-5 p-2' %>
      <% end %>
      </div>
    </div>
  </div>
</center>
