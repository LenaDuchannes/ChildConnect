<center>
  <div class="forms-container">
    <div class="row justify-content-center text-left">
      <div class="card-body shadow col-8 m-5 bg-white rounded">
      <h3 class="mb-4">ADD NEXT ACTION</h3>
      <hr>
      <%= simple_form_for [@case, @case_action] do |f| %>
        <%= f.input :title, label: 'Action:', input_html: { class: "input", style: "width:100%" }, placeholder: 'Add an action that needs to be completed' %>
        <%= f.full_error :token %>
        <%= link_to "BACK", case_path(@case), class: 'btn btn-b btn-sm mt-1 font-weight-light p-2' %>
        <%= f.submit 'ADD ACTION', class: 'btn btn-b btn-sm mt-1 font-weight-light p-2' %>
      <% end %>
      </div>
    </div>
  </div>
</center>


